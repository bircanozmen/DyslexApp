<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".TopicPage">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:text="CATEGORIES"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="clock"
        android:text="CLOCK"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="seaons"
        android:text="SEASONS"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text2"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="days"
        android:text="DAYS"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text3"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="months"
        android:text="MONTHS"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text4"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="numbers"
        android:text="NUMBERS"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text6"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text5"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="words"
        android:text="WORDS"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text7"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text6"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="directions"
        android:text="DIRECTIONS"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text8"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text7"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="multiplication"
        android:text="MULTIPLICATION"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/text9"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/text8"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/purple"
        android:gravity="center"
        android:onClick="images"
        android:text="IMAGES"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_marginStart="200dp"
        android:layout_marginTop="560dp"
        android:onClick="back"/>


</RelativeLayout>